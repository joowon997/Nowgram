<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.nowjoo.nowgram.user.repository.UserRepository">
	<select id="selectUserById" parameterType="int"
	resultType="com.nowjoo.nowgram.user.domain.User">
	SELECT
		`id`
		,`loginId`
		, `password`
		, `name`
		, `birthday`
		, `email`
		, `phoneNumber`
		, `createdAt`
		, `updatedAt`
	FROM
		`user`
	WHERE
		`id` = #{id}
	</select>
	
	
	<select id="findUser" parameterType="map" 
	resultType="com.nowjoo.nowgram.user.DTO.FindDTO">
	SELECT
		`loginId`
	FROM
		`user`
	WHERE
		`name` = #{name}
		AND `birthday` = #{birthday}
		AND `phoneNumber` = #{phoneNumber}
	</select>
	
	<insert id="insertProfil" parameterType="map">
		INSERT INTO
		`profil`
	(
		`userId`
		, `nickname`
		, `imagePath`
	)
	VALUE
	(
		#{userId}
		, #{nickname}
		, #{imagePath}
	)
	</insert>
	
	<insert id="insertUser" parameterType="map">
	INSERT INTO
		`user`
	(
		`loginId`
		, `password`
		, `name`
		, `birthday`
		, `email`
		, `phoneNumber`
	)
	VALUE
	(
		#{loginId}
		, #{password}
		, #{name}
		, #{birthday}
		, #{email}
		, #{phoneNumber}
	)
	</insert>
	
	<select id="selectCountByLoginId" parameterType="string" resultType="int">
	SELECT
		count(*)
	FROM
		`user`
	WHERE
		`loginId` = #{loginId}
	</select>
	
	<select id="selectUser" parameterType="map" 
	resultType="com.nowjoo.nowgram.user.domain.User">
	SELECT
		`id`
		,`loginId`
		, `password`
		, `name`
		, `birthday`
		, `email`
		, `phoneNumber`
		, `createdAt`
		, `updatedAt`
	FROM
		`user`
	WHERE
		`loginId` = #{loginId}
		AND `password` = #{password}
	</select>

 
 </mapper>